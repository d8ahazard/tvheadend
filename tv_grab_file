#!/bin/bash
dflag=
vflag=
cflag=
if (( $# < 1 ))
then
  cat /data/guide.xml
  exit 0
fi

for arg
do
    delim=""
    case "$arg" in
    #translate --gnu-long-options to -g (short options)
       --description) args="${args}-d ";;
       --version) args="${args}-v ";;
       --capabilities) args="${args}-c ";;
       --url) args="${args}-u ";;
       #pass through anything else
       *) [[ "${arg:0:1}" == "-" ]] || delim="\""
           args="${args}${delim}${arg}${delim} ";;
    esac
done

#Reset the positional parameters to the short options
eval set -- $args

while getopts "dvcu" option
do
    case $option in
        d)  dflag=1;;
        v)  vflag=1;;
        c)  cflag=1;;
        u)  URL=${OPTARG};;
        \?) printf "unknown option: -%s\n" $OPTARG
            printf "Usage: %s: [--description] [--version] [--capabilities] \n" $(basename $0)
            exit 2
            ;;
    esac >&2
done

if ! [ -z ${URL+x} ]
    wget -O - $URL > /dev/null 2>&1
fi

if [ "$dflag" ]
then
   printf "Either read ~/.xmltv/tv_grab_file.xmltv file, or grab XML from url specified with -u flag.\n"
fi
if [ "$vflag" ]
then
   printf "0.1\n"
fi
if [ "$cflag" ]
then
   printf "baseline\n"
fi

exit 0

